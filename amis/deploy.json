{
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-1",
        "source_ami": "ami-6fbf9779",
        "instance_type": "t2.medium",
        "ssh_username": "centos",
        "ami_name": "platform-2017.3 {{timestamp}}",
        "tags": {
            "service": "platform",
            "version": "2017.3",
            "build": "latest"
        }
    }],

    "provisioners": [
        {
            "type": "file",
            "source": "amis/deploy.yml",
            "destination": "/tmp/99_reco_deploy.yml"
        },
        {
            "type": "file",
            "source": "amis/deploy.sh",
            "destination": "/tmp/deploy.sh"
        },
        {
        	"type": "shell",
        	"inline": [
                "sudo cp /tmp/99_reco_deploy.yml /etc/cloud/cloud.cfg.d/99_reco_deploy.cfg",
                "sudo mkdir -p /opt/reco",
                "sudo cp /tmp/deploy.sh /opt/reco/deploy.sh",
                "sudo chmod +x /opt/reco/deploy.sh",
                "sudo yum install -y docker jq"
            ]
        }
    ]
}
